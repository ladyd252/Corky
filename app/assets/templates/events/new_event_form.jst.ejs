<div class="container">
    <div class="row">
    <form role="form" class="col-md-6 event-form">
      <h2>Create a new event</h2>
            <p>Enter in the following details to start sharing pictures!</p>
      <div class="form-group">
        <label for="title">Event Title</label>
        <input placeholder="title" id="title" name="event[title]" type="text" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="date">Event Date</label>
        <input id="date" name="event[event_date]" type="date" class="form-control" required>
      </div>
      <div class="form-group">
        <button class="btn" type="submit">Add new event!</button>
      </div>
    </form>
  </div>
</div>
