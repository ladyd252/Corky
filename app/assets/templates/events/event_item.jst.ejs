<script>
  filepicker.setKey("<%= FILEPICKER_API_KEY %>");
</script>

<div class="notes">
  <div class="main-note">
    <ul class="event-details">
      <li class="title"> <h1> <%= event.escape('title') %> </h1>
      <li class="date"> Date: <%= event.escape('event_date') %></li>
      <li class="number"> Phone number: <%= event.escape('phone_number') %></li>
      <li> Event Actions:</li>
      <ul class="event-actions">
        <li> <button class="slideshow btn btn-success"> Slideshow! </button> </li>
        <li> <button class="upload btn btn-primary">Upload pictures and get the party started!</button> <span class="upload-success">Picture saved!</span></li>
        <li> <button class="btn btn-sm btn-danger delete-event">Delete Event</button></li>
      </ul>
    </ul>
  </div>

  <br>
  <h3>To edit details, double click detail. To save, click outside of form box.</h3>
</div>

<div id="posts">
  <% event.posts().each(function(post){ %>
    <% if(post.get("picture_url")){ %>
      <div class="item">
        <img src="<%= post.escape("picture_url") %>">
      </div>
    <%}%>
  <%})%>
</div>

<div id="slideshow-<%=event.id %>">
</div>
